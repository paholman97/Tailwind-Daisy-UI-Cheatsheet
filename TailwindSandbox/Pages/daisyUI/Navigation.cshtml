@* BREADCRUMBS *@
<div class="container w-11/12 mx-auto mt-6">
    <p class="text-2xl">Breadcrumbs</p>
</div>
<div class="container w-10/12 mx-auto">
    <div class="text-sm breadcrumbs">
        <ul>
            <li><a>Home</a></li>
            <li><a>Documents</a></li>
            <li>Add Document</li>
        </ul>
    </div>
</div>

@* PAGINATION *@
<div class="container w-11/12 mx-auto mt-6">
    <p class="text-2xl">Pagination</p>
</div>
<div class="container w-10/12 mx-auto">
    <div class="btn-group">
        <button class="btn">1</button>
        <button class="btn btn-active">2</button>
        <button class="btn">3</button>
        <button class="btn">4</button>
    </div>
</div>

